<%- include('./partials/navegation'); %>
<main>
    <div class="container-fluid px-4">
        <h1 class="my-4">Editar Serviço</h1>
        <div class="card mb-4">
            <div class="card-body">
                <section class="edit-services">
                    <% if(typeof service !== 'undefined') { %>
                    <form action="/admin/listaServicos/editar/<%= service.id %>/?_method=PUT " method=POST enctype="multipart/form-data" >
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="nomeServico" placeholder="Nome do Serviço" value="<%= service.nomeServico %>" required>
                        </div>
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="precoServico" placeholder="Preço do Serviço" value="<%= service.precoServico %>"required>
                        </div>
                        <div class="form-group mb-2">
                            <textarea class="form-control" name="descricaoServico" placeholder="Descrição do Serviço"  rows="3"><%= service.descricaoServico %></textarea>
                        </div>

                        <% if(service.ilustracaoServico){ %> 
                        <div>
                            <img src="/uploads/<%= service.ilustracaoServico %>">
                        </div>
                        <% } %> 

                        <div class="form-group mb-2">
                            <div class="custom-file">
                                <input type="file" name="ilustracaoServico" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Escolher Arquivo</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </form>
                    <% } %> 
                </section>
            </div>
        </div>
    </div>
</main>
<%- include('./partials/footer'); %>  
           